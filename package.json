{
  "name": "@validate/validate-runner",
  "version": "1.0.1",
  "publisher": "XueYou",
  "typings": "dist/index.d.ts",
  "description": "验证执行器",
  "main": "dist/validate-runner.js",
  "module": "dist/validate-runner.es.js",
  "files": [
    "/dist/"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production rollup -c",
    "test": "jest",
    "_publish": "npm run test && npm run build && npm publish"
  },
  "keywords": [
    "validate"
  ],
  "author": {
    "name": "XueYou",
    "email": "xueyoucd@gmail.com"
  },
  "repository": {
    "type": "git",
    "url": "http://m.bank-pay.com:3080/xueyou/validate-runner"
  },
  "license": "MIT",
  "publishConfig": {
    "registry": "http://m.bank-pay.com:8081/repository/npm-my/"
  },
  "devDependencies": {
    "@types/jest": "^23.3.2",
    "@validate/validate-methods": "^1.0.3",
    "@validate/validate-provider": "^1.0.2",
    "cross-env": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^23.5.0",
    "rollup": "^0.65.2",
    "rollup-plugin-node-resolve": "^3.4.0",
    "rollup-plugin-progress": "^0.4.0",
    "rollup-plugin-typescript2": "^0.17.0",
    "ts-jest": "^23.1.4",
    "typescript": "^3.0.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**/*.{js,jsx,ts,tsx}"
    ],
    "transform": {
      "^.+\\.ts?$": "ts-jest"
    },
    "moduleNameMapper": {
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "testMatch": [
      "<rootDir>/tests/**/*.spce.(j|t)s"
    ],
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "transformIgnorePatterns": [
      "[/\\\\]node_modules[/\\\\].+\\.(js|jsx|mjs|ts|tsx)$"
    ]
  }
}
