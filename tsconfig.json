{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "es",
        "module": "es6",
        "target": "es5",
        "declaration": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "importHelpers": true,
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "paths": {
            "@/*": ["src/*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src"]
}
