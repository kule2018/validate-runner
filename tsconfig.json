{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "es",
        "declarationDir": "dts",
        "module": "esnext",
        "declaration": true,
        "skipLibCheck": true,
        "moduleResolution": "node",
        "target": "esnext",
        "esModuleInterop": true,
        "lib": ["esnext", "dom"],
        "paths": {
            "@/*": ["src/*"]
        }
    },
    "include": ["src"]
}
