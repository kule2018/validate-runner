{
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "es",
        "module": "es6",
        "target": "esnext",
        "declaration": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "lib": ["esnext", "dom"],
        "paths": {
            "@/*": ["src/*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src", "node_modules/validate-provider/es"]
}
